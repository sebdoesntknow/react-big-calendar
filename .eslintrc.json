{
  "env": {
    "browser": true,
    "es6": true,
    "node": false
  },
  "extends": [
      "eslint:recommended",
      "plugin:flowtype/recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
      "ecmaVersion": 7,
      "ecmaFeatures": {
          "impliedStrict": true,
          "jsx": false,
          "experimentalObjectRestSpread": true,
          "modules": true
      },
  "sourceType": "module"
  },
  "rules": {
    "no-var": ["error"],
    "strict": [2, "never"],
    "babel/generator-star-spacing": 1,
    "babel/new-cap": 1,
    "babel/object-shorthand": 1,
    "babel/arrow-parens": 1,
    "babel/no-await-in-loop": 1,
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/react-in-jsx-scope": 2,
    "no-console": "off",
    "eqeqeq": "error",
    "indent": [
        "error",
        2
    ],
    "linebreak-style": [
        "error",
        "unix"
    ],
    "semi": [
        "error",
        "always"
    ],
    "flowtype-errors/show-errors": 2,
    "flowtype/delimiter-dangle": [
        2,
        "only-multiline"
    ],
    "flowtype/semi": [2, "always"]
    },
    "plugins": [
      "babel",
      "react",
      "flowtype",
      "flowtype-errors"
    ],
    "settings": {
        "flowtype": {
        "onlyFilesWithFlowAnnotation": false
    }
  }
}
